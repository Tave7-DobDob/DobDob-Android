<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:id="@+id/nickDialog_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="닉네임 변경"/>
    </LinearLayout>

    <TextView
        android:id="@+id/nickDialog_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용하실 닉네임을 입력해주세요."
        android:layout_margin="15dp"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_below="@id/nickDialog_title" />

    <EditText
        android:id="@+id/nickDialog_nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft = "15dp"
        android:layout_marginRight = "15dp"
        android:padding="5dp"
        android:background="@drawable/bg_edittext"
        android:layout_below="@id/nickDialog_write" />

    <TextView
        android:id="@+id/nickDialog_isCheckedNick"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:text="입력하신 닉네임이 이미 존재합니다."
        android:layout_below="@id/nickDialog_nick"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/nickDialog_btChange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="변경"/>
        <Button
            android:id="@+id/nickDialog_btCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:text="취소"/>
    </LinearLayout>
</RelativeLayout>
