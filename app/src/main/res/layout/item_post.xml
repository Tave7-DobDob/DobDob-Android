<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="3dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/postrow_profile"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/user"
                app:civ_border_width="2dp"
                app:civ_border_color="#AAAAAA" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/postrow_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="닉네임"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/pin_gray"
                        android:scaleType="fitCenter"
                        android:layout_marginEnd="2dp"
                        android:adjustViewBounds="true" />
                    <TextView
                        android:id="@+id/postrow_town"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="상도동"
                        android:textColor="#A3A3A3"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/postrow_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2021.05.16 20:00"
                        android:textColor="#A3A3A3"
                        android:textSize="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/postrow_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:text="post 제목"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/postrow_ivHeart"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:contentDescription="하트수"
                android:src="@drawable/heart" />

            <TextView
                android:id="@+id/postrow_heartNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:text="12"
                android:textColor="#000000"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="10dp"
                android:contentDescription="댓글수"
                android:src="@drawable/comment_icon" />

            <TextView
                android:id="@+id/postrow_commentNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:text="3"
                android:textColor="#000000"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/postrow_Divider"
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#E6E6E6"/>

    <com.nex3z.flowlayout.FlowLayout
        android:id="@+id/postrow_flTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:flChildSpacing="5dp"
        app:flRowSpacing="8dp">
    </com.nex3z.flowlayout.FlowLayout>

</LinearLayout>
