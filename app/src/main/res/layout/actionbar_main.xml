<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:id="@+id/toolbar_main_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/toolbar_gpspointer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/pin"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="ðŸ§­GPS"/>

        <TextView
            android:id="@+id/toolbar_town"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="XXë™"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/yellow" />
    </LinearLayout>

    <SearchView
        android:id="@+id/toolbar_search"
        android:searchIcon="@drawable/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="13dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/toolbar_subMenuUser" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/toolbar_subMenuUser"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/user"
        app:civ_border_width="2dp"
        app:civ_border_color="#AAAAAA" />
</RelativeLayout>
