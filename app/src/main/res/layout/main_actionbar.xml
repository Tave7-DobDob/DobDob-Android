<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/toolbar_gpspointer"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:src="@drawable/gps_pointer"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="🧭GPS"/>
    <TextView
        android:id="@+id/toolbar_town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/toolbar_gpspointer"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:text="신사동"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/toolbar_search"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toStartOf="@id/toolbar_profile"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/search"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription="🔍검색"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/toolbar_profile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/user_image"
        app:civ_border_width="1dp"
        app:civ_border_color="#AAAAAA" />

</RelativeLayout>
