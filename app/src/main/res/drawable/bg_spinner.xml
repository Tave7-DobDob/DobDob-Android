<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#BCBCBC" />
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="5dp" />
                    <padding
                        android:top="8dp"
                        android:bottom="8dp"
                        android:left="8dp"
                        android:right="10dp" />
                </shape>
            </item>
            <item
                android:drawable="@drawable/spinner_choose"
                android:gravity="center|end"
                android:width="20dp"
                android:height="25dp" />
        </layer-list>
    </item>
</selector>
