<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--에디트텍스트가 포커스를 받았을 때-->
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#BCBCBC" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="5dp"/>
            <padding android:top="2dp"   android:bottom="2dp"    android:left="2dp"      android:right="2dp"/>
        </shape>
    </item>

    <!--EditText가 포커스를 받지 않은 일반적 경우-->
    <item android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#BCBCBC" />
            <solid android:color="#FFFFFF" />
            <corners android:radius="5dp"/>
            <padding android:top="2dp"   android:bottom="2dp"    android:left="10dp"      android:right="10dp"/>
        </shape>
    </item>
</selector>
